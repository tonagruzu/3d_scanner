<Window x:Class="Scanner3D.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D Scanner" Height="560" Width="900">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock FontSize="22" FontWeight="SemiBold" Text="3D Scanner - MVP Shell" />

        <Border Grid.Row="1" Margin="0,16,0,16" BorderThickness="1" Padding="12">
            <StackPanel>
                <TextBlock Text="Capture and reconstruction pipeline is currently in bootstrap mode." Margin="0,0,0,8"/>
                <TextBlock Text="Target precision: Â±0.5 mm (validated scope)." Margin="0,0,0,8"/>
                <TextBlock Text="Outputs: OBJ/STL mesh + six dimensioned orthographic sketches." Margin="0,0,0,14"/>

                <TextBlock Text="Status" FontWeight="SemiBold"/>
                <TextBlock x:Name="StatusTextBlock" Text="Idle" Margin="0,2,0,10"/>

                <TextBlock Text="Validation" FontWeight="SemiBold"/>
                <TextBlock x:Name="ValidationSummaryTextBlock" Text="No run yet" Margin="0,2,0,10" TextWrapping="Wrap"/>

                <TextBlock Text="Artifacts" FontWeight="SemiBold"/>
                <ListBox x:Name="ArtifactListBox" Height="130" MouseDoubleClick="ArtifactListBox_MouseDoubleClick" Margin="0,0,0,10" />

                <TextBlock Text="Run History" FontWeight="SemiBold"/>
                <ListBox x:Name="RunHistoryListBox" Height="90" SelectionChanged="RunHistoryListBox_SelectionChanged" />
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button x:Name="RunPipelineButton" Width="220" Height="36" HorizontalAlignment="Left" Content="Run Pipeline Stub" Click="RunPipelineStub_Click"/>
            <Button x:Name="OpenOutputButton" Width="220" Height="36" Margin="12,0,0,0" HorizontalAlignment="Left" Content="Open Output Folder" Click="OpenOutputFolder_Click" IsEnabled="False"/>
            <Button x:Name="CopySummaryButton" Width="220" Height="36" Margin="12,0,0,0" HorizontalAlignment="Left" Content="Copy Run Summary" Click="CopyRunSummary_Click" IsEnabled="False"/>
            <Button x:Name="ExportSummaryButton" Width="220" Height="36" Margin="12,0,0,0" HorizontalAlignment="Left" Content="Export Run Summary" Click="ExportRunSummary_Click" IsEnabled="False"/>
            <Button x:Name="OpenSummaryButton" Width="220" Height="36" Margin="12,0,0,0" HorizontalAlignment="Left" Content="Open Last Summary File" Click="OpenLastSummaryFile_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
